<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>Cms.BatCave.Sonar.Agent</RootNamespace>
    <ImplicitUsings>false</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>sonar-agent.exe</AssemblyName>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="NSwag.MSBuild" Version="13.17.0">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\sonar-core\sonar-core.csproj" />
  </ItemGroup>

  <Target Name="NSwag">
    <Exec Command="$(NSwagExe_Net60) run nswag.json" />
  </Target>

</Project>
